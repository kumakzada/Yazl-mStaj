
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<section class="ftco-section ftco-hireme img" style="background-image: url(ronaldo/images/bg_1.jpg)">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 ftco-animate text-center">
                <h2>Ben <span>Serbest</span> Calisan Birisiyim</h2>
                <p>Sakarya Adin buyuk bir sehirde yasayorum Ve serbes isler yapiyorum Benimle calismak icin.</p>
                <p class="mb-0"><a href="#" class="btn btn-primary py-3 px-5">Benimle Calis</a></p>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section contact-section ftco-no-pb" id="contact-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h1 class="big big-2">Iletisim</h1>
                <h2 class="mb-4">Iletisim</h2>
                <p>Yukardaki yazilarim, tecrubalarim,deneyimlerim ve uzmanliklarim ilgini cektiyse bana ulas</p>
            </div>
        </div>
        <!--Iletisim -->
       @Html.Action("IletisimBilgiler","Home")
        <div class="row no-gutters block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form action="#" class="bg-light p-4 p-md-5 contact-form" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Adiniz" name="name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email" name="email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Konu" name="konu">
                    </div>
                    <div class="form-group">
                        <textarea name="messaj" id="" cols="30" rows="7" class="form-control" placeholder="Message" ></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gonder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
            <div class="col-md-6 d-flex">
                <div class="img" style="background-image: url(images/about.jpg);"></div>
            </div>
        </div>
    </div>
</section>

