@model List<kisiselWeb22.Models.Iletisim>
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
            <a href="~/Admin1/Index" class="current">Tables</a>
        </div>
        <h1>Iletisim Tablosu</h1>
        <div>
            <h5>
                <a href="/Ekleme/IletisimEkle" style="width:200px; height:30px; margin-left:10px;border: 2px solid #4CAF50;border-radius: 16px; padding-top:10px;"
                   class="btn btn-info">Ekleme Formuna Git</a>
            </h5>
        </div>
    </div>
    <div class="container-fluid">
        <hr>
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"> <i class="icon-th"></i> </span>
                <h5>Static table</h5>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-bordered table-striped">

                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Email</th>
                            <th>Konu Baslik</th>
                            <th>Messaj</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var i in Model)
                        {
                        <tr class="odd gradeX">
                            @if (i.Id != 0)
                            {

                                <td>@i.Id</td>
                            }
                            else
                            {
                                <td>NULL</td>
                            }
                            @if (i.Ad != null)
                            {

                                <td>@i.Ad</td>
                            }
                            else
                            {
                                <td>NULL</td>
                            }
                            @if (i.Email != null)
                            {

                                <td>@i.Email</td>
                            }
                            else
                            {
                                <td>NULL</td>
                            }
                            @if (i.KonuBaslik != null)
                            {

                                <td>@i.KonuBaslik</td>
                            }
                            else
                            {
                                <td>NULL</td>
                            }
                            @if (i.Messaj != null)
                            {

                                <td>@i.Messaj</td>
                            }
                            else
                            {
                                <td>NULL</td>
                            }
                            <td><a href="/Admin/IletisimSil/@i.Id" class="btn btn-danger" style = "border-radius:10px;">Sil</a></td>
                            @*<td><a href="/Admin/IletisimGuncelle/@i.Id" class="btn btn-success">Guncelle</a></td>*@
                            <td>@Html.ActionLink("Guncelle", "IletisimGuncelle", new { id = i.Id }, new { @class = "btn btn-success", style = "border-radius:10px;" })</td>
                        </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>




    </div>
</div>

