@model List<kisiselWeb22.Models.OdullOZ>
@{
    ViewBag.Title = "Odul";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
            <a href="#" class="current">Tables</a>
        </div>
        <h1>Oduller Tablosu</h1>
        <div>
            <h5>
                <a href="/Ekleme/OdulEkle" style="width:200px; height:30px; margin-left:10px;border: 2px solid #4CAF50;border-radius: 16px; padding-top:10px;"
                   class="btn btn-info">Ekleme Formuna Git</a>
            </h5>
        </div>
    </div>
    <div class="container-fluid">
        <hr>
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"> <i class="icon-th"></i> </span>
                <h5>Static table</h5>
            </div>
            <div class="widget-content nopadding">
                <table class="table table-bordered table-striped">

                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Yil</th>
                            <th>Ilk Kacinci</th>
                            <th>Firma Adi</th>
                            <th>Aciklama</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var i in Model)
                        {
                        <tr class="odd gradeX">
                            @if (i.Id != 0)
                            {
                                <td>@i.Id</td>
                            }
                            else
                            {
                                <td>NULL</td>
                            }
                            @if (i.Yil != null)
                            {
                                <td>
                                    @i.Yil
                                </td>
                            }
                            else
                            {
                                <td>NULL</td>

                            }
                            @if (i.IlkKacinci != null)
                            {
                                <td>@i.IlkKacinci</td>}
                            else
                            {
                                <td>NULL</td>
                            }
                            @if (i.FirmaAdi != null)
                            {
                                <td class="center">@i.FirmaAdi</td>
                            }
                            else
                            {
                                <td>NULL</td>
                            }
                            @if (i.Aciklama != null)
                            {
                                <td class="center">@i.Aciklama</td>
                            }
                            else
                            {
                                <td>NULL</td>
                            }
                            <td><a href="/Admin/OdulSil/@i.Id" class="btn btn-danger" style = "border-radius:10px;">Sil</a></td>
                            <td><a href="/Admin/OdulGuncelle/@i.Id" class="btn btn-success" style = "border-radius:10px;">Guncelle</a></td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>




    </div>
</div>

